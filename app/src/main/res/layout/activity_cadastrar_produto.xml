<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="br.com.opet.tds.meusprodutosapp.Activity.CadastrarProdutoActivity">

    <EditText
        android:id="@+id/editNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nome do Produto"/>
    <Spinner
        android:id="@+id/spinnerDescricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/generos"/>
    <EditText
        android:id="@+id/editPreco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Preco do Produto"/>
    <CheckBox
        android:id="@+id/checkVendido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Adicionar aos vendidos?"/>
    <Button
        android:onClick="salvarProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Salvar"/>
</LinearLayout>
